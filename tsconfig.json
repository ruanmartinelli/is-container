{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "outDir": "dist/",
    "module": "commonjs",
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}

